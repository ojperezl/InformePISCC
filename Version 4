t_hveh_dpto <- mutate(t_hveh_dpto, TDepartamento = (Depcasos*100000)/Dpob)

t_hveh.x <- filter(t_hveh, anno %in% ini:fin, codmun == x)
t_hveh.x[is.na(t_hveh.x)] <- 0

gt_hveh <- Reduce(merge, list(t_hveh_nal, t_hveh_dpto, t_hveh.x))
