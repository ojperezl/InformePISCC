gt_hres <- select(gt_hres, anno, TNacional, TDpto, Tcasos)
colnames(gt_hres) <- c("anno", "Tasa Nacional", "Tasa Departamento", "Tasa Municipio")
gt_hres <- melt(gt_hres, id = "anno")
ggplot(data=gt_hres, aes(x=anno, y=value, colour = variable)) + geom_line(size = 1.3) + labs(title = "Figura 12: Tasa de Hurto a residencias por 100.000 habitantes.\n \ Comparativo Nacional, Departamento y Municipio", x = "", y = "Tasa por 100.000 habitantes") + theme(legend.position = "top", plot.title = element_text(size = 12)) + scale_colour_manual(values = c("cyan", "blue", "red"))

hres_zona <- select(hres, anno, codmun, zona)
hres_zona <- filter(hres_zona, anno %in% ini:fin, codmun == x)
hres_zona <- as.data.frame(table(zona = hres_zona$zona))
hres_zona <- arrange(hres_zona, desc(Freq))
hres_zona <- mutate(hres_zona, porc = (Freq/sum(Freq))*100)
n <- nrow(hres_zona)
hres_zona <- mutate(hres_zona, seq = 1:n)
