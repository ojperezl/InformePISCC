## Hurto a vehiculos

```{r Hurto a vehiculos 1}
t_hveh_nal <- t_hveh
t_hveh_nal <- filter(t_hveh_nal, anno %in% ini:fin)
t_hveh_nal <- group_by(t_hveh_nal, anno)
t_hveh_nal <- summarise(t_hveh_nal, Nalcasos = sum(Ncasos))
t_hveh_nal <- mutate(t_hveh_nal, TNacional = (Nalcasos*100000)/n_pob$Npob)
t_hveh_nal <- round(t_hveh_nal, 1)

t_hveh_dpto <- t_hveh
t_hveh_dpto <- filter(t_hveh_dpto, anno %in% ini:fin, coddpto == y)
t_hveh_dpto <- group_by(t_hveh_dpto, anno, coddpto)
t_hveh_dpto <- summarise(t_hveh_dpto, Depcasos = sum(Ncasos))
d_pob.y <- filter(d_pob, coddpto == y)
t_hveh_dpto$Dpob <- d_pob.y$Dpob[match(t_hveh_dpto$anno, d_pob.y$anno)]
t_hveh_dpto <- mutate(t_hveh_dpto, TDpto = (Depcasos*100000)/Dpob)
nd <- nrow(t_hveh_dpto)
if (nd <= fin-ini) {
    t_hveh_dpto1 <- data.frame(anno = c(ini:fin), TDepartamento1 = c(0:0))
    t_hveh_dpto1$TDepartamento <- t_hveh_dpto$TDepartamento[match(t_hveh_dpto1$anno, t_hveh_dpto$anno)]
    t_hveh_dpto1 <- mutate(t_hveh_dpto1, TDepartamento = TDepartamento+TDepartamento1)
    t_hveh_dpto <- t_hveh_dpto1
} 
t_hveh_dpto[is.na(t_hveh_dpto)] <- 0
t_hveh_dpto <- round(t_hveh_dpto, 1)

t_hveh.x1 <- filter(t_hveh, anno %in% ini:fin, codmun == x)
t_hveh.x1[is.na(t_hveh.x1)] <- 0
nx <- nrow(t_hveh.x1)
no <- NULL
sum <- sum(t_hveh.x1$Ncasos)
tmun <- "del Municipio (linea roja) versus la Tasa"
figs <- "La Figura 16 muestra los tipos de arma con mayor uso en los hurtos y la Figura 17 los principales lugares de ocurrencia. Ver Anexo A para identificar las etiquetas relacionadas."

if (nx == 0) {
    t_hveh.x1 <- data.frame(anno = c(ini:fin), codmun = c(x), Tcasos = c(0:0))
    no <- "no "
    sum <- NULL
    tmun <- NULL
    figs <- "Consecuencia de lo anterior las siguientes Figuras no muestran los datos relacionados."
} else {
    t_hveh.x1 <- filter(t_hveh, anno %in% ini:fin, codmun == x)
}

t_hveh.x <- data.frame(anno = c(ini:fin), codmun = c(x), Tcasos = c(0:0))
t_hveh.x$id <- paste(t_hveh.x$codmun, t_hveh.x$anno, sep = "_")
t_hveh.x$Tcasos1 <- t_hveh.x1$Tcasos[match(t_hveh.x$id, t_hveh.x1$id)]
t_hveh.x[is.na(t_hveh.x)] <- 0
t_hveh.x <- mutate(t_hveh.x, Tcasos = Tcasos+Tcasos1)
t_hveh.x <- select(t_hveh.x, anno, Tcasos)
t_hveh.x <- round(t_hveh.x, 1)

gt_hveh <- Reduce(merge, list(t_hveh_nal, t_hveh_dpto, t_hveh.x))
gt_hveh <- select(gt_hveh, anno, TNacional, TDpto, Tcasos)
colnames(gt_hveh) <- c("anno", "Tasa Nacional", "Tasa Departamento", "Tasa Municipio")
gt_hveh <- melt(gt_hveh, id = "anno")
ggplot(data=gt_hveh, aes(x=anno, y=value, colour = variable)) + geom_line(size = 1.3) + labs(title = "Figura 15: Tasa de Hurto a vehiculos por 100.000 habitantes.\n \ Comparativo Nacional, Departamento y Municipio", x = "", y = "Tasa por 100.000 habitantes") + theme(legend.position = "top", plot.title = element_text(size = 12)) + scale_colour_manual(values = c("cyan", "blue", "red"))

hveh_zona <- select(hveh, anno, codmun, zona)
hveh_zona <- filter(hveh_zona, anno %in% ini:fin, codmun == x)
hveh_zona <- as.data.frame(table(zona = hveh_zona$zona))
hveh_zona <- arrange(hveh_zona, desc(Freq))
hveh_zona <- mutate(hveh_zona, porc = (Freq/sum(Freq))*100)
n <- nrow(hveh_zona)
hveh_zona <- mutate(hveh_zona, seq = 1:n)
hveh_zona <- filter(hveh_zona, zona == "Urbana" | zona == "Rural")
hveh_zona$porc <- round(hveh_zona$porc, digits = 1)
z1 <- filter(hveh_zona, seq == 1)
z2 <- filter(hveh_zona, seq == 2)
ns <- hveh_zona$Freq
cm <- ", "
zon1 <- "% de los casos se registraron en zona "
zon2 <- " y el restante en zona "
if (ns == 0) {
    z1 <- NULL
    z2 <- NULL
    zon1 <- NULL
    zon2 <- NULL
    cm <- NULL
}
```
