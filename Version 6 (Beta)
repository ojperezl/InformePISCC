    t_hres.x1 <- data.frame(anno = c(ini:fin), codmun = c(x), Tcasos = c(0:0))
    no <- "no "
    sum <- NULL
    tmun <- NULL
    figs <- "Consecuencia de lo anterior las siguientes Figuras no muestran los datos relacionados."
} else {
    t_hres.x1 <- filter(t_hres, anno %in% ini:fin, codmun == x)
}

